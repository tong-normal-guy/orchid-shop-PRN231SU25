@page
@model OrchidsShop.PresentationLayer.Pages.OrdersModel
@{
    ViewData["Title"] = "My Orders";
    ViewData["ActivePage"] = "Orders";
}

@{
    var userEmail = ViewContext.HttpContext.Session.GetString("UserEmail");
    var isLoggedIn = !string.IsNullOrEmpty(userEmail);
}

<div class="container mt-4">
    @if (!isLoggedIn)
    {
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-soft">
                    <div class="card-body text-center p-5">
                        <i class="bi bi-lock text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                        <h4 class="mt-3">Authentication Required</h4>
                        <p class="text-muted mb-4">Please sign in to view your order history.</p>
                        <div class="d-flex gap-3 justify-content-center">
                            <a asp-page="/Auth/Login" class="btn btn-primary">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
                            </a>
                            <a asp-page="/Auth/Register" class="btn btn-outline-primary">
                                <i class="bi bi-person-plus me-2"></i>Create Account
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <h2 class="gradient-text mb-1">
                            <i class="bi bi-box-seam me-2"></i>My Orders
                        </h2>
                        <p class="text-muted">Track your orchid purchases and order history</p>
                    </div>
                    <a href="/?view=products" class="btn btn-primary">
                        <i class="bi bi-flower1 me-2"></i>Continue Shopping
                    </a>
                </div>
            </div>
        </div>

        <!-- Orders will be loaded here -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-soft">
                    <div class="card-header">
                        <h5 class="mb-0">Order History</h5>
                    </div>
                    <div class="card-body">
                        <!-- Loading State -->
                        <div id="ordersLoading" class="text-center py-5">
                            <div class="loading-spinner mb-3"></div>
                            <p class="text-muted">Loading your orders...</p>
                        </div>

                        <!-- Empty Orders State -->
                        <div id="emptyOrders" class="text-center py-5 d-none">
                            <i class="bi bi-bag-x text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                            <h4 class="mt-3 text-muted">No orders yet</h4>
                            <p class="text-muted">You haven't placed any orders yet. Start shopping to see your order history here!</p>
                            <a href="/?view=products" class="btn btn-primary">
                                <i class="bi bi-flower1 me-2"></i>Start Shopping
                            </a>
                        </div>

                        <!-- Orders List -->
                        <div id="ordersList" class="d-none">
                            <!-- Sample orders for demonstration -->
                            <div class="border rounded p-4 mb-3">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <div class="fw-bold">Order #ORD-001</div>
                                        <small class="text-muted">Placed on Jan 15, 2025</small>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex align-items-center">
                                            <img src="/assets/logos/orchid-openai.png" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;" alt="Orchid">
                                            <div>
                                                <div class="fw-medium">Beautiful Phalaenopsis</div>
                                                <small class="text-muted">Quantity: 2</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="fw-bold text-primary">$89.98</div>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="badge bg-success">Delivered</span>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <button class="btn btn-outline-primary btn-sm me-2">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </button>
                                        <button class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-arrow-clockwise me-1"></i>Reorder
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="border rounded p-4 mb-3">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <div class="fw-bold">Order #ORD-002</div>
                                        <small class="text-muted">Placed on Jan 10, 2025</small>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex align-items-center">
                                            <img src="/assets/logos/orchid-openai.png" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;" alt="Orchid">
                                            <div>
                                                <div class="fw-medium">Purple Cattleya Orchid</div>
                                                <small class="text-muted">Quantity: 1</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="fw-bold text-primary">$78.50</div>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="badge bg-warning">Shipping</span>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <button class="btn btn-outline-primary btn-sm me-2">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </button>
                                        <button class="btn btn-outline-info btn-sm">
                                            <i class="bi bi-truck me-1"></i>Track
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <div class="border rounded p-4 mb-3">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <div class="fw-bold">Order #ORD-003</div>
                                        <small class="text-muted">Placed on Jan 5, 2025</small>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="d-flex align-items-center">
                                            <img src="/assets/logos/orchid-openai.png" class="rounded me-2" style="width: 40px; height: 40px; object-fit: cover;" alt="Orchid">
                                            <div>
                                                <div class="fw-medium">Silk Dendrobium Arrangement</div>
                                                <small class="text-muted">Quantity: 1</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="fw-bold text-primary">$32.99</div>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="badge bg-info">Processing</span>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <button class="btn btn-outline-primary btn-sm me-2">
                                            <i class="bi bi-eye me-1"></i>View Details
                                        </button>
                                        <button class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-x-circle me-1"></i>Cancel
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary Stats -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card shadow-soft text-center">
                    <div class="card-body">
                        <i class="bi bi-bag-check text-success" style="font-size: 2rem;"></i>
                        <h4 class="mt-2 mb-1">3</h4>
                        <p class="text-muted mb-0">Total Orders</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-soft text-center">
                    <div class="card-body">
                        <i class="bi bi-currency-dollar text-primary" style="font-size: 2rem;"></i>
                        <h4 class="mt-2 mb-1">$201.47</h4>
                        <p class="text-muted mb-0">Total Spent</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-soft text-center">
                    <div class="card-body">
                        <i class="bi bi-flower1 text-warning" style="font-size: 2rem;"></i>
                        <h4 class="mt-2 mb-1">4</h4>
                        <p class="text-muted mb-0">Orchids Purchased</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow-soft text-center">
                    <div class="card-body">
                        <i class="bi bi-star-fill text-warning" style="font-size: 2rem;"></i>
                        <h4 class="mt-2 mb-1">Gold</h4>
                        <p class="text-muted mb-0">Customer Status</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            @if (isLoggedIn)
            {
                <text>
                // Simulate loading orders
                setTimeout(() => {
                    $('#ordersLoading').addClass('d-none');
                    $('#ordersList').removeClass('d-none');
                }, 1000);
                </text>
            }
        });

        function viewOrderDetails(orderId) {
            showAlert('info', `Order details for ${orderId} - Coming soon!`);
        }

        function trackOrder(orderId) {
            showAlert('info', `Order tracking for ${orderId} - Coming soon!`);
        }

        function reorderItems(orderId) {
            if (confirm('Add these items to your cart again?')) {
                showAlert('success', 'Items added to cart!');
            }
        }

        function cancelOrder(orderId) {
            if (confirm('Are you sure you want to cancel this order?')) {
                showAlert('success', 'Order cancelled successfully');
            }
        }
    </script>
} 